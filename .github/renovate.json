{
  "extends": ["config:base", "docker:disable"],
  "masterIssue": true,
  "schedule": ["every 3 months"],
  "packageRules": [
    {
      "matchUpdateTypes": [
        "major",
        "minor",
        "patch",
        "pin",
        "digest",
        "lockFileMaintenance",
        "rollback",
        "bump"
      ],
      "automerge": true
    }
  ]
}
